<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns="sap.suite.ui.commons"
	controllerName="processflow.controller.Main">
	<m:Panel>
		<m:Label text="Process Flow sample - zooming buttons and highlighted items" />
		<m:HBox renderType="Bare">
			<m:Button text="Zoom In" press="onZoomIn" />
			<m:Button text="Zoom Out" press="onZoomOut" />
			<m:Button text="Display Highlight Path" press="onHighlightPath" />
			<m:Button text="Update Model" press="onUpdateModel" />
		</m:HBox>
		<ProcessFlow
			id="processflow1"
			scrollable="false"
			foldedCorners="true"
			nodePress="onNodePress"
			nodes="{/nodes}"
			lanes="{/lanes}">
			<nodes>
				<ProcessFlowNode
					laneId="{lane}"
					nodeId="{id}"
					title="{title}"
					titleAbbreviation="{titleAbbreviation}"
					children="{children}"
					state="{state}"
					stateText="{stateText}"
					texts="{texts}"
					highlighted="{highlighted}"
					focused="{focused}" />
			</nodes>
			<lanes>
				<ProcessFlowLaneHeader
					laneId="{id}"
					iconSrc="{icon}"
					text="{label}"
					position="{position}" />
			</lanes>
		</ProcessFlow>
		<m:Label text="Process Flow sample - click on lane header" />
		<ProcessFlow
			id="processflow2"
			scrollable="false"
			nodes="{pf2>/nodes}"
			lanes="{pf2>/lanes}"
			headerPress="onHeaderPress">
			<nodes>
				<ProcessFlowNode
					laneId="{pf2>lane}"
					nodeId="{pf2>id}"
					title="{pf2>title}"
					children="{pf2>children}"
					state="{pf2>state}"
					stateText="{pf2>stateText}"
					texts="{pf2>texts}"
					focused="{pf2>focused}" />
			</nodes>
			<lanes>
				<ProcessFlowLaneHeader
					laneId="{pf2>id}"
					iconSrc="{pf2>icon}"
					text="{pf2>label}"
					position="{pf2>position}"
					state="{pf2>state}" />
			</lanes>
		</ProcessFlow>
	</m:Panel>
</mvc:View>
