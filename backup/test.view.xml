<mvc:View controllerName="odatatest.controller.Main" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:f="sap.ui.layout.form" xmlns:m="sap.m" height="100%">
    <ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
        <!--flexEnabled="true" useIconTabBar="true"-->
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="OData Request Test " wrapping="true" />
                </expandedHeading>
                <snappedHeading>
                    <m:Title text="OData Request Test" wrapping="true" />
                </snappedHeading>
                <actions>
                    <m:Button text="READ" type="Emphasized" tooltip="pull-down" press="onReadEntity" />
                    <m:Button text="CREATE" type="Emphasized" tooltip="pull-down" press="onCreate" />
                    <m:Button text="UPDATE" type="Emphasized" tooltip="show" press="onUpdate" />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent />
        <sections>
            <ObjectPageSection titleUppercase="false" title="Section 4" showTitle="true">
                <subSections>
                    <ObjectPageSubSection titleUppercase="false">
                        <blocks>
                            <f:SimpleForm editable="true" columnsM="2" columnsL="3" columnsXL="4" layout="ColumnLayout">
                                <f:content>
                                    <m:Label text="Employee ID" />
                                    <m:Input value="" />
                                    <m:Label text="First Name" />
                                    <m:Input value="" />
                                    <m:Label text="Last Name" />
                                    <m:Input value="" />

                                    <m:Label text="Hire Date" />
                                    <m:Input value="" />
                                    <m:Label text="Title" />
                                    <m:Input value="" />
                                </f:content>
                            </f:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection titleUppercase="false" title="Section 5" showTitle="true">
                <subSections>
                    <ObjectPageSubSection titleUppercase="false">
                        <blocks>
                            <m:Table id="idProductsTable" sticky="HeaderToolbar,ColumnHeaders" inset="false" items="{/maraSet}" class="sapFDynamicPageAlignContent" width="auto" selectionChange="onItemPress" mode="SingleSelect">
                                <m:headerToolbar>
                                    <m:Toolbar>
                                        <m:Title text="SalesOrderSet" level="H2" />
                                    </m:Toolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column width="12em">
                                        <m:Text text="Matnr" />
                                    </m:Column>
                                    <m:Column width="12em">
                                        <m:Text text="Memo" />
                                    </m:Column>
                                    <m:Column width="12em">
                                        <m:Text text="Spart" />
                                    </m:Column>
                                    <m:Column width="12em">
                                        <m:Text text="Meins" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:Text text="{Matnr}" />
                                            <m:Text text="{Memo}" />
                                            <m:Text text="{Spart}" />
                                            <m:Text text="{Meins}" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
