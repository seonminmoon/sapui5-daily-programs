<c:FragmentDefinition
	xmlns="sap.m"
  xmlns:t="sap.ui.table"
	xmlns:c="sap.ui.core"
>
   <Dialog
      id="DialogCustomerId"
      contentWidth="40%"
      draggable="true"
      contentHeight="50%"
      title="Select Customer ID">
      <content>
        <t:Table
          rows="{/Customers}"
          visibleRowCount="12"
          ariaLabelledBy="title">
          <t:columns>
              <t:Column hAlign="Center">
                  <Label text="CustomerID" />
                  <t:template>
                      <Text text="{CustomerID}" />
                  </t:template>
              </t:Column>
              <t:Column hAlign="Center">
                  <Label text="CompanyName" />
                  <t:template>
                      <Input value="{CompanyName}" />
                  </t:template>
              </t:Column>
              <t:Column hAlign="Center">
                  <Label text="ContactName" />
                  <t:template>
                      <Text text="{ContactName}" />
                  </t:template>
              </t:Column>
          </t:columns>
      </t:Table>
      </content>
        <endButton>
          <Button text="close" press="onClose"/>
        </endButton>
   </Dialog>
</c:FragmentDefinition>