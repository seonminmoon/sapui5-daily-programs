<mvc:View
    controllerName="report.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:t="sap.ui.table"
    xmlns="sap.m"
    xmlns:f="sap.f"
>
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Order List"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <FlexBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <Label text="Order ID"/>
                        <Input 
                            fieldGroupIds="search" 
                            name="OrderID" 
                            value="{view>/search/EQ/OrderID}"
                            submit="onSearch"/>
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </VBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <Label text="Customer ID"/>
                        <Input id="searchCustomerID" 
                        fieldGroupIds="search" 
                        name="CustomerID" 
                        value="{view>/search/EQ/CustomerID}" submit="onSearch"/>
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </VBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <Label text="Employee ID"/>
                        <Input 
                        fieldGroupIds="search" 
                        name="EmployeeID" 
                        value="{view>/search/EQ/EmployeeID}" submit="onSearch"/>
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </VBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <Label text="Order Date"/>
                        <DatePicker
                            fieldGroupIds="search"
                            name="OrderDate" value="{view>/search/EQ/OrderDate}"
                            displayFormat="yyyy-MM-dd"
                            valueFormat="yyyy-MM-dd"
                        />
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </VBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <Label text="Required Date"/>
                        <DatePicker
                            fieldGroupIds="search"
                            name="RequiredDate" value="{view>/search/EQ/RequiredDate}"
                            displayFormat="yyyy-MM-dd"
                            valueFormat="yyyy-MM-dd"
                        />
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </VBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <Label text="Shipped Date"/>
                        <DatePicker
                            fieldGroupIds="search"
                            name="ShippedDate" value="{view>/search/EQ/ShippedDate}"
                            displayFormat="yyyy-MM-dd"
                            valueFormat="yyyy-MM-dd"
                        />
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </VBox>
                </FlexBox>
                <VBox class="sapUiSmallMarginEnd" alignItems="End">
                    <Button id="searchButton" text="search" type="Emphasized" press="onSearch"/>
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </VBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <t:Table
                id="idTable"
                rows="{/Orders}"
                selectionBehavior="RowOnly"
                selectionMode="None"
                visibleRowCount="17"
                cellClick="onCellClick"
                ariaLabelledBy="title">
                <t:extension>
                    <OverflowToolbar style="Clear">
                        <ToolbarSpacer />
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column>
                        <Label text="ID" />
                        <t:template>
                            <Text text="{OrderID}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="CustomerID" />
                        <t:template>
                            <Text text="{CustomerID}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="EmployeeID" />
                        <t:template>
                            <Text text="{EmployeeID}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="OrderDate" />
                        <t:template>
                            <Text text="{
                                path : 'OrderDate',
                                formatter : '.formatter.dateTimeString'
                            }" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="RequiredDate" />
                        <t:template>
                            <Text text="{
                                path : 'RequiredDate',
                                formatter : '.formatter.dateTimeString'
                            }" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="ShippedDate" />
                        <t:template>
                            <Text text="{
                                path : 'ShippedDate',
                                formatter : '.formatter.dateTimeString'
                            }" wrapping="false" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="Submit"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
