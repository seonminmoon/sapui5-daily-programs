<c:FragmentDefinition
	xmlns="sap.m"
  xmlns:t="sap.ui.table"
	xmlns:c="sap.ui.core"
>
   <Dialog
      id="DialogCustomerId"
      beforeOpen=".CustomerIdController.onBeforeOpen($controller, $event)"
      contentWidth="40%"
      draggable="true"
      contentHeight="50%"
      title="Select Customer ID">
      <content>
        <t:Table
            class="sapUiSmallMargin"
            id="DialogCustomerIdTable"
            rows="{/Customers}"
            visibleRowCount="12"
            selectionMode="Single"
            selectionBehavior="RowOnly"
            rowSelectionChange=".CustomerIdController.onCustomerRowSelectionChange($controller, $event)"
            ariaLabelledBy="title">
          <t:columns>
              <t:Column hAlign="Center">
                  <Label text="CustomerID" />
                  <t:template>
                      <Text text="{CustomerID}" />
                  </t:template>
              </t:Column>
              <t:Column hAlign="Center">
                  <Label text="CompanyName" />
                  <t:template>
                      <Input value="{CompanyName}" />
                  </t:template>
              </t:Column>
              <t:Column hAlign="Center">
                  <Label text="ContactName" />
                  <t:template>
                      <Text text="{ContactName}" />
                  </t:template>
              </t:Column>
          </t:columns>
      </t:Table>
      </content>
        <endButton>
          <Button text="close" press=".CustomerIdController.DialogController.onClose"/>
        </endButton>
   </Dialog>
</c:FragmentDefinition>